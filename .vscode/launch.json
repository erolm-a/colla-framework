    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: launch_tokenizer.py",
            "type": "python",
            "request": "launch",
            "program": "launch_tokenizer.py",
            "cwd": "${workspaceFolder}/notebooks",
            "console": "integratedTerminal",
            "preLaunchTask": "Launch maturin (release build)"
        },
        {
            "name": "(lldb) Launch",
            "type": "lldb",
            "request": "launch",
            "program": "~/.pyenv/versions/colla/bin/python",
            "args": [
                "launch_tokenizer.py"
            ],
            "preLaunchTask": "Launch maturin",
            "cwd": "${workspaceFolder}/notebooks",
            "env": {
            },
            "sourceLanguages": ["rust, python"]
        },
        {
            "name": "(lldb) Run Tests",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--no-default-features",
                    "--lib"
                ],
                 "filter": {
                    "name": "tokenizer_cereal",
                    "kind": "lib"
                }
            },
            "relativePathBase": "${workspaceFolder}/notebooks/3rdparty/tokenizer_cereal",
            // "preLaunchTask": "Launch maturin",
            "cwd": "${workspaceFolder}/notebooks/3rdparty/tokenizer_cereal",
            "env": {
                "RUST_BACKTRACE": "1",
                "DATA_DIR": "/home/erolm_a/Documenti/Work/knowledge-glue/notebooks/data"
            },
            "sourceLanguages": ["rust", "python"]
        },
    ]
}